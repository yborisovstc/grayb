<?xml version="1.0" ?>


<!-- Simple test that creates sole state Incrementor looped to youself 
     Tests: state (Confirmed, Prepared, Trans, agent), socket connection -->


<!DOCTYPE node SYSTEM "../etc/objspec.dtd"> 

<node id="testroot" parent="Elem">
    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:../modules/syst.xml#SysComps" />
    <!-- Module containing components of incaps layer -->
    <node id="incapsmod" parent="file:../modules/capsula.xml#IncapsComps" />
    <!-- Module containing components of data -->
    <node id="datamod" parent="file:../modules/data.xml#DataComps" />
    <!-- Module containing components of func -->
    <node id="funcmod" parent="file:../modules/func.xml#FuncComps" />
    <!-- Module containing components of des layer -->
    <node id="desmod" parent="file:../modules/des.xml#DesComps" />

    <node id="test" parent="incapsmod/Incaps">

	<node id="State1" parent="../desmod/StateInt">
	    <!-- <cont node="DataSInt:Confirmed/Value" val="34"/> -->

	    <node id="Logspec" parent="Elem">
		<node id="Creation" parent="Elem">
		</node>
	    </node>

	    <add node="(DataSCInt:)Confirmed">
		<node id="Logspec" parent="Elem">
		    <node id="Update" parent="../../../../datamod/DataLogevent">
		    </node>
		</node>
	    </add>

	    <node id="Trans" parent="../../desmod/(TrInt:)TrIncInt">
	    </node>

	    <node parent="Edge"> 
		<cont node="P1" val="(TrIncInt:)Trans/Inp"/> 
		<cont node="P2" val="Capsule/Inp/(StInpSocket:)Int/PinData"/> 
	    </node>

	    <node parent="Edge"> 
		<cont node="P1" val="Trans/Out"/> 
		<cont node="P2" val="(DataSCInt:)Prepared/Capsule/Inp"/> 
	    </node>

	</node>

	<!-- Loop -->
	<node parent="Edge"> 
	    <cont node="P1" val="State1/Capsule/Out"/> 
	    <cont node="P2" val="State1/Capsule/Inp"/> 
	</node>

    </node>
</node>

