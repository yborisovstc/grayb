<?xml version="1.0" ?>

<!-- Unit test for ceation of Incapsulated system. It has capsule component that includes connpoint.
     -->


<!DOCTYPE node SYSTEM "../etc/objspec.dtd"> 

<node id="testroot" parent="Elem">
    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:../modules/syst.xml#SysComps" />
    <!-- Module containing components of incaps layer -->
    <node id="incapsmod" parent="file:../modules/capsula.xml#IncapsComps" />

    <!-- <node id="test" parent="IncapsComps:incapsmod/IncapsBase:Incaps"> -->
    <node id="test" parent="incapsmod/Incaps">
	<node id="Ics1" parent="../incapsmod/Incaps">
	    <node id="cp_int" parent="../../sysmod/ConnPoint"> 
		<cont node="Provided" val="Role3"/> <cont node="Required" val="Role4"/>
	    </node>
	    <add node="Capsule">
		<node id="ep" parent="../../../sysmod/Extender"> 
		    <cont node="Int/Provided" val="Role4"/> <cont node="Int/Required" val="Role3"/>
		</node>
	    </add>
	</node>

	<node id="Ics2" parent="../incapsmod/Incaps">
	    <add node="Capsule">
		<node id="ep" parent="../../../sysmod/Extender"> 
		    <cont node="Int/Provided" val="Role3"/> <cont node="Int/Required" val="Role4"/>
		</node>
	    </add>
	</node>

	<!-- Trying to connect extention points from capsules - right way to connect -->
	<node parent="Edge"> 
	    <cont node="P1" val="../../Ics1/Capsule/ep"/> 
	    <cont node="P2" val="../../Ics2/Capsule/ep"/> 
	</node>

	<!-- Trying to connect internal conn points - that should be refused by incapsulated system -->
	<node parent="Edge"> 
	    <cont node="P1" val="../../Ics1/cp_int"/> 
	    <cont node="P2" val="../../Ics2/Capsule/ep"/> 
	</node>

    </node>
</node>

