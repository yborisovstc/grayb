<?xml version="1.0" ?>

<!-- Unit test for ceation of system. System includes connpoint with roles specified.
     So System supports different "type" of relations (roled relations)
     This test is just for conn points connection
     -->


<!DOCTYPE node SYSTEM "../etc/objspec.dtd"> 

<node id="test" parent="Syst">
    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:../modules/syst.xml#SysComps" />

    <node id="Syst1" parent="Syst">
	<node id="cp" parent="./../sysmod/ConnPoint"> 
	    <cont node="./Provided" val="Role1"/> <cont node="./Required" val="Role2"/>
	</node>
	<node id="ep" parent="./../sysmod/Extender"> 
	    <cont node="./Int/Provided" val="Role3"/> <cont node="./Int/Required" val="Role4"/>
	</node>
    </node>

    <node id="cp1" parent="./sysmod/ConnPoint"> 
	<cont node="./Provided" val="Role1"/> <cont node="./Required" val="Role2"/></node>
    <node id="cp2" parent="./sysmod/ConnPoint"> 
	<cont node="./Provided" val="Role2"/> <cont node="./Required" val="Role1"/></node>
    <node id="cp3" parent="./sysmod/ConnPoint"> 
	<cont node="./Provided" val="Role4"/> <cont node="./Required" val="Role3"/></node>
    <node id="E1" parent="Edge"> <cont node="./P1" ref="./../../cp1"/> <cont node="./P2" ref="./../../cp2"/> </node>

    <node id="edge1" parent="Edge"> <cont node="./P1" ref="./../../(Syst:)Syst1/cp"/> <cont node="./P2" ref="./../../cp2"/> </node>
    <node id="E2" parent="Edge"> <cont node="./P1" ref="./../../Syst1/(Extender:)ep/Int"/> <cont node="./P2" ref="./../../cp3"/> </node>

</node>

