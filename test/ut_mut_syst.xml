<?xml version="1.0" ?>

<!-- Unit test for ceation of system. System includes connpoint with roles specified.
     So System supports different "type" of relations (roled relations)
     This test is just for conn points connection
     -->


<!DOCTYPE node SYSTEM "../etc/objspec.dtd"> 

<node id="test" parent="Syst">
    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:../modules/syst.xml#SysComps" />

    <node id="Syst1" parent="Syst"/>
    <node targ="./Syst1" id="cp" parent="./../sysmod/ConnPoint"/> 
    <cont targ="./Syst1/cp" node="./Provided" val="Role1"/>
    <cont targ="./Syst1/cp" node="./Required" val="Role2"/>
    <node targ="./Syst1" id="ep" parent="./../sysmod/Extender"/> 
    <cont targ="./Syst1/ep" node="./Int/Provided" val="Role3"/>
    <cont targ="./Syst1/ep" node="./Int/Required" val="Role4"/>

    <node id="cp1" parent="./sysmod/ConnPoint"/> 
    <cont targ="./cp1" node="./Provided" val="Role1"/>
    <cont targ="./cp1" node="./Required" val="Role2"/>
    <node id="cp2" parent="./sysmod/ConnPoint"/> 
    <cont targ="./cp2" node="./Provided" val="Role2"/>
    <cont targ="./cp2" node="./Required" val="Role1"/>
    <node id="cp3" parent="./sysmod/ConnPoint"/> 
    <cont targ="./cp3" node="./Provided" val="Role4"/>
    <cont targ="./cp3" node="./Required" val="Role3"/>
    <node id="E1" parent="Edge"/>
    <cont targ="./E1" node="./P1" ref="./../../cp1"/>
    <cont targ="./E1" node="./P2" ref="./../../cp2"/>

    <node id="edge1" parent="Edge"/>
    <cont targ="./edge1" node="./P1" ref="./../../Syst1/cp"/>
    <cont targ="./edge1" node="./P2" ref="./../../cp2"/>
    <node id="E2" parent="Edge"/>
    <cont targ="./E2" node="./P1" ref="./../../Syst1/ep/Int"/>
    <cont targ="./E2" node="./P2" ref="./../../cp3"/>

</node>

