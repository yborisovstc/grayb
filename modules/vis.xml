<?xml version="1.0" ?>

<!-- Base elements for visualization
     -->

<!DOCTYPE node SYSTEM "/usr/share/grayb/conf/objspec.dtd">

<node id="VisComps" parent="Elem">

    <!-- Modules -->
    <node id="sysmod" parent="file:/usr/share/grayb/modules/syst.xml#SysComps" />
    <node id="desmod" parent="file:/usr/share/grayb/modules/des.xml#DesComps"/>

    <!-- Parent's representative CP -->
    <node id="Parent" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Required" val="MVisChild"/>
	<cont node="Prop:Provided" val="MVisContainer"/>
    </node>

    <!-- Child's representaitve CP -->
    <node id="Child" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Required" val="MVisContainer"/>
	<cont node="Prop:Provided" val="MVisChild"/>
    </node>

    <!-- Child's representaitve Extender -->
    <node id="Child" parent="SysComps:sysmod/Vert:Extender"> 
	<rm node="ConnPoint:Int"/>
	<node id="Int" parent="../ConnPoint:Parent"/> 
    </node>

    <!-- Data Int provider representaitve CP -->
    <node id="DIntProv" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Provided" val="MDIntGet"/>
    </node>

    <!-- Top level window -->
    <node id="Window" parent="Syst"> 
	<add node="Elem:Agents"> 
	    <node id="WinAgent" parent="AWindow"/> 
	</add>
	<!-- Parent's representative -->
	<node id="Parent" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Required" val="MVisChild"/>
	    <cont node="Prop:Provided" val="MVisContainer"/>
	</node>
    </node>

    <!-- Widget base -->
    <node id="Widget" parent="Syst"> 
	<!-- Child's representaitve -->
	<node id="Child" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Required" val="MVisContainer"/>
	    <cont node="Prop:Provided" val="MVisChild"/>
	</node>
	<node id="Inp_X" parent="../DesComps:desmod/StIntInp"/> 
	<node id="Inp_Y" parent="../DesComps:desmod/StIntInp"/> 
	<node id="Inp_W" parent="../DesComps:desmod/StIntInp"/> 
	<node id="Inp_H" parent="../DesComps:desmod/StIntInp"/> 
	<node id="Prov_PW" parent="../DesComps:desmod/StIntOut"/> 
	<node id="Prov_PH" parent="../DesComps:desmod/StIntOut"/> 
    </node>

    <!-- Container doing fixed layout -->
    <node id="Fixed" parent="Syst"> 
	<add node="Elem:Agents"> 
	    <node id="WinAgent" parent="AVisFixed"/> 
	</add>
	<!-- Child's representaitve -->
	<node id="Child" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Required" val="MVisContainer"/>
	    <cont node="Prop:Provided" val="MVisChild"/>
	</node>
	<!-- Parent's representative -->
	<node id="Parent" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Required" val="MVisChild"/>
	    <cont node="Prop:Provided" val="MVisContainer"/>
	</node>
    </node>

    <!-- Drawing area -->
    <node id="Drawing" parent="Widget"> 
	<add node="Elem:Agents"> 
	    <node id="WinAgent" parent="AVisDrawing"/> 
	</add>
    </node>


</node>

