<?xml version="1.0" ?>

<!-- Base elements for data keeping systems
     -->

<!DOCTYPE node SYSTEM "/usr/share/grayb/conf/objspec.dtd"> 

<node id="DataComps" parent="Elem">

    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:/usr/share/grayb/modules/syst.xml#SysComps" />
    <!-- Module containing components of incaps layer -->
    <node id="incapsmod" parent="file:/usr/share/grayb/modules/capsula.xml#IncapsComps" />

 
    <!-- DES logging event -->
    <node id="DataLogevent" parent="Elem" />

    <!-- Data with separate input for setting and output for getting -->
    <node id="DataS" parent="IncapsComps:incapsmod/Syst:Incaps"> 
    	<add node="Elem:Capsule"> 
	    <node id="inp" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
	    <node id="out" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"> 
		<cont node="Prop:Required" val="MDataObserver"/>
	    </node>
    	</add>
	<node id="Value" parent="Prop"/>
    </node>

    <!-- Data with separate input for setting and output for getting. W/o notificaion -->
    <node id="DataSU" parent="IncapsComps:incapsmod/Syst:Incaps"> 
    	<add node="Elem:Capsule"> 
	    <node id="inp" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
	    <node id="out" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
    	</add>
	<node id="Value" parent="Prop"/>
    </node>


    <node id="DataSInt" parent="Incaps:DataS"> 
    	<add node="Elem:Agents"> <node id="MACompsObserver" parent="DInt"/> </add>
	<cont node="Elem:Capsule/ConnPoint:inp/Prop:Provided" val="MDIntSet"/>
	<cont node="Elem:Capsule/ConnPoint:out/Prop:Provided" val="MDIntGet"/>
    </node>

    <!-- Observer iface is declared for purpose of compatibility but isn't supported -->
    <node id="DataSNInt" parent="Incaps:DataS"> 
    	<add node="Elem:Agents"> <node id="AData" parent="DNInt"/> </add>
	<cont node="Elem:Capsule/ConnPoint:inp/Prop:Provided" val="MDIntSet"/>
	<cont node="Elem:Capsule/ConnPoint:out/Prop:Provided" val="MDIntGet"/>
    </node>

    <node id="DataSUInt" parent="Incaps:DataSU"> 
    	<add node="Elem:Agents"> <node id="MACompsObserver" parent="DInt"/> </add>
	<cont node="Elem:Capsule/ConnPoint:inp/Prop:Provided" val="MDIntSet"/>
	<cont node="Elem:Capsule/ConnPoint:out/Prop:Provided" val="MDIntGet"/>
    </node>


    <node id="DataInt" parent="IncapsComps:incapsmod/Syst:Incaps"> 

    	<add node="Elem:Agents"> <node id="ADInt" parent="DInt"/> </add>

    	<add node="Elem:Capsule"> 
	    <node id="out" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"> 
		<cont node="Prop:Provided" val="MDInt"/>
	    </node>
    	</add>
    </node>

    <!-- START: Data with separate input, output, and dedicated input for initiating of setting data-->
    
    <!-- DES logging event Update -->
    <node id="Update" parent="DataLogevent" />


    <!-- Data base -->
    <node id="DataSC" parent="IncapsComps:incapsmod/Syst:Incaps"> 
    	<add node="Elem:Capsule"> 
	    <node id="Inp" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
	    <node id="Out" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
	    <node id="Upd" parent="../../SysComps:sysmod/ConnPointBase:ConnPoint"/> 
    	</add>
	<node id="Value" parent="Prop"/>
    </node>

    <!-- Data Int -->
    <node id="DataSCInt" parent="Incaps:DataSC"> 
    	<add node="Elem:Agents"> 
	    <node id="MACompsObserver" parent="DInt"/> 
    	</add>
	<cont node="Elem:Capsule/ConnPoint:Inp/Prop:Required" val="MDIntGet"/>
	<cont node="Elem:Capsule/ConnPoint:Out/Prop:Provided" val="MDIntGet"/>
	<cont node="Elem:Capsule/ConnPoint:Upd/Prop:Provided" val="MUpdatable"/>
    </node>

    <!-- END: Data with separate input, output, and dedicated input for initiating of setting data-->


</node>

